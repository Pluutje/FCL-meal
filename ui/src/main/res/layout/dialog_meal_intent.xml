<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StyleDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            style="@style/StyleDialogHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_meal" />

            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/meal_intent_title"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#10B9E6"
            android:text="@string/meal_intent_description1" />

        <!-- Meal size -->
        <RadioGroup
            android:id="@+id/meal_size_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <RadioButton
                android:id="@+id/meal_small"
                style="@style/Widget.App.RadioButton"
                android:text="@string/meal_intent_small" />

            <RadioButton
                android:id="@+id/meal_normal"
                style="@style/Widget.App.RadioButton"
                android:checked="true"
                android:text="@string/meal_intent_normal" />

            <RadioButton
                android:id="@+id/meal_large"
                style="@style/Widget.App.RadioButton"
                android:text="@string/meal_intent_large" />

            <RadioButton
                android:id="@+id/meal_snack"
                style="@style/Widget.App.RadioButton"
                android:text="@string/meal_intent_snack" />

        </RadioGroup>

        <!-- Snack / borrel extra instellingen -->
        <LinearLayout
            android:id="@+id/snack_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="5dp"
            tools:visibility="visible">

            <!-- Tijd -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Duur"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <app.aaps.core.ui.elements.MinutesNumberPicker
                    android:id="@+id/snack_time"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    app:customContentDescription="Snack duur" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/unit_minute_short"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <!-- Bolus -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Extra bolus"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <app.aaps.core.ui.elements.NumberPicker
                    android:id="@+id/snack_bolus"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    app:customContentDescription="Snack bolus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="@string/insulin_unit_shortname"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

        </LinearLayout>



        <!-- Hint -->
        <TextView
            android:id="@+id/meal_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="16sp"
            android:textColor="#1DB121"
            android:text="Meal info" />

        <!-- Pre-bolus display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#10B9E6"
            android:text="@string/meal_intent_description2" />
        <TextView
            android:id="@+id/prebolus_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#10B9E6"
            android:text="Pre-bolus: 0.0 E" />

        <include
            android:id="@+id/okcancel"
            layout="@layout/okcancel" />

    </LinearLayout>
</ScrollView>
